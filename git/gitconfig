[user]
	name = Alexey Blinov
	email = alexey@songkick.com
[merge]
  tool = Kaleidoscope
[diff]
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true
[difftool]
  prompt = false
[mergetool]
  prompt = false
[alias]
  st = status
  ci = commit -v
  co = checkout
  di = diff
  amend = commit --amend
  aa = add --all
  fa = fetch --all
  pom = push origin master
  b = branch
  ignored = !git ls-files -v | grep "^[[:lower:]]"
  prune-local = !git branch --merged | tr -d '*' | grep -v dev | xargs -n1 git branch -d
	sklone = "!f() { git clone alexey@git.songkick.net:/home/songkick/git/$1; }; f"
  aliases = config --get-regexp alias
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -n 15
  lgall = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
  st = status -sb
  save = !git add -A && git commit -m 'SAVEPOINT'
  undo = reset HEAD~1 --mixed
  wipe = reset --hard HEAD
[push]
	default = simple
[color]
	ui = always
[color "diff-highlight"]
  oldNormal = red
  oldHighlight = red 52
  newNormal = green
  newHighlight = green 22
[color "diff"]
  commit = green
  meta = yellow
  frag = cyan
  old = red
  new = green
  whitespace = red reverse
[help]
	autocorrect = 1
[url "git@github.com:"]
  insteadOf = https://github.com
[core]
	excludesfile = /Users/alexey/.gitignore_global
	pager = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less -r
[pull]
	rebase = true
[commit]
  template = ~/.git_commit_message